{
    "name": "spryker-sdk/sdk",
    "description": "The Spryker SDK aims to provide a single entry point to accelerate your productivity working with Spryker.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-phar": "*",
        "ext-simplexml": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "composer-runtime-api": "^2.1",
        "composer/semver": "^3.2",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/migrations": "^3.4",
        "doctrine/orm": "^2.11",
        "guzzlehttp/guzzle": "^7.4",
        "monolog/monolog": "^2.3",
        "nelmio/api-doc-bundle": "^4.10",
        "ondrejmirtes/better-reflection": "4.3.*",
        "phpbench/phpbench": "^1.2",
        "phpstan/phpstan": "^1.2",
        "ramsey/uuid": "^3.9",
        "rector/rector": "^0.13.0",
        "spryker-sdk/acp": "^0.2.0",
        "spryker-sdk/async-api": "^0.2.3",
        "spryker-sdk/brancho": "1.0.x-dev",
        "spryker-sdk/composer-replace": "dev-master",
        "spryker-sdk/sdk-contracts": "^0.4.6",
        "spryker-sdk/security-checker": "^0.1.0",
        "spryker-sdk/spryk": "^0.4.7",
        "spryker-sdk/sync-api": "^0.1.1",
        "spryker-sdk/upgrader": "dev-master",
        "spryker/architecture-sniffer": "^0.5.2",
        "spryker/code-sniffer": "^0.17.6",
        "symfony/asset": "^5.0",
        "symfony/config": "^5.4.0",
        "symfony/console": "^5.0",
        "symfony/dotenv": "^5.0",
        "symfony/event-dispatcher": "^5.0",
        "symfony/expression-language": "^5.0",
        "symfony/filesystem": "^5.0",
        "symfony/flex": "^1.18.0",
        "symfony/framework-bundle": "^5.3",
        "symfony/lock": "^5.4",
        "symfony/monolog-bundle": "^3.8",
        "symfony/process": "^5.0",
        "symfony/runtime": "^5.0",
        "symfony/serializer": "^5.0",
        "symfony/twig-bundle": "^5.0",
        "symfony/validator": "^5.0",
        "symfony/workflow": "^5.0",
        "symfony/yaml": "^5.0",
        "vimeo/psalm": "^4.24"
    },
    "require-dev": {
        "codeception/codeception": "^4.2.1",
        "codeception/module-asserts": "*",
        "codeception/module-cli": "*",
        "codeception/module-filesystem": "^2.0",
        "codeception/module-phpbrowser": "^2.0",
        "codeception/module-rest": "^2.0.2",
        "codeception/module-symfony": "*",
        "codeception/module-webdriver": "^2.0",
        "mikey179/vfsstream": "^1.6",
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/php-timer": "^5.0",
        "sllh/composer-versions-check": "^2.0",
        "symfony/var-dumper": "^5.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "sllh/composer-versions-check": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "files": [
            "bootstrap.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "SprykerSdk\\Sdk\\": "src/",
            "SprykerSdk\\Sniffs\\": "Sniffs/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerSdk\\Sdk\\": "tests/Sdk/",
            "Hello\\": "extension/Hello/src/",
            "Custom\\": "extension/Custom/src/",
            "InspectionDoc\\": "extension/InspectionDoc/src/",
            "InspectionDoc\\Tests\\": "extension/InspectionDoc/tests/",
            "VcsConnector\\": "extension/VcsConnector/src/",
            "VcsConnector\\Tests\\": "extension/VcsConnector/tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyze",
        "linters": [
            "@cs-fix",
            "@cs-check",
            "@stan"
        ],
        "test": "codecept build && codecept run unit",
        "test-vcs-connector-extension": "codecept build -c extension/VcsConnector/codeception.yml && codecept run unit -c extension/VcsConnector/codeception.yml",
        "test-inspection-doc-extension": "codecept build -c extension/InspectionDoc/codeception.yml && codecept run unit -c extension/InspectionDoc/codeception.yml",
        "test-qa": "codecept build && codecept run acceptance",
        "test-cover": "codecept build && codecept run unit --coverage-xml",
        "test-cover-html": "codecept build && codecept run unit --coverage-html",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "cp ./config/git/pre-commit ./.git/hooks/pre-commit"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "cp ./config/git/pre-commit ./.git/hooks/pre-commit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^5.0"
        }
    },
    "suggest": {
        "spryker-sdk/sdk-tasks-bundle": "Provides a list of SDK tasks for the internal Spryker projects."
    }
}

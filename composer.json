{
    "name": "spryker-sdk/sdk",
    "description": "The Spryker SDK aims to provide a single entry point to accelerate your productivity working with Spryker.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-phar": "*",
        "ext-simplexml": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "composer-runtime-api": "^2.1",
        "composer/semver": "^3.2",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/migrations": "^3.4",
        "doctrine/orm": "^2.11",
        "monolog/monolog": "^2.3",
        "ondrejmirtes/better-reflection": "^4.3.81",
        "phpbench/phpbench": "^1.2",
        "phpstan/phpstan": "^1.2",
        "spryker-sdk/acp": "^0.1.0",
        "spryker-sdk/async-api": "dev-bugfix/apps-4250-fix-executable-path-in-asyncapi-sdk as 0.2.1",
        "spryker-sdk/composer-replace": "dev-master",
        "spryker-sdk/sdk-contracts": "dev-master",
        "spryker-sdk/spryk": "^0.4.0",
        "spryker-sdk/sync-api": "dev-bugfix/apps-4251-fix-executable-path-in-syncapi-sdk as 0.1.0",
        "spryker-sdk/upgrader": "dev-master as 0.1.0",
        "spryker/architecture-sniffer": "^0.5.2",
        "spryker/code-sniffer": "^0.17.1",
        "symfony/console": "^5.0 || ^6.0",
        "symfony/dotenv": "^5.0 || ^6.0",
        "symfony/event-dispatcher": "^5.0 || ^6.0",
        "symfony/expression-language": "^5.0 || ^6.0",
        "symfony/flex": "^1.18.0",
        "symfony/framework-bundle": "^5.0 || ^6.0",
        "symfony/process": "^5.0 || ^6.0",
        "symfony/runtime": "^5.0 || ^6.0",
        "symfony/validator": "^5.0 || ^6.0",
        "symfony/workflow": "^5.0 || ^6.0",
        "symfony/yaml": "^5.0 || ^6.0"
    },
    "require-dev": {
        "codeception/codeception": "*",
        "codeception/module-asserts": "*",
        "codeception/module-cli": "*",
        "codeception/module-filesystem": "*",
        "mikey179/vfsstream": "^1.6",
        "phpunit/php-code-coverage": "^9.2",
        "sllh/composer-versions-check": "^2.0",
        "spryker-sdk/brancho": "1.0.x-dev",
        "spryker-sdk/security-checker": "^0.1.0",
        "symfony/filesystem": "^5.0 || ^6.0",
        "symfony/var-dumper": "^5.0 || ^6.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "sllh/composer-versions-check": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "SprykerSdk\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerSdk\\Sdk\\": "tests/Sdk/",
            "Hello\\": "extension"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "cs-check": "phpcs --colors -p -s --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_project/, src/ tests/ extension/",
        "cs-fix": "phpcbf --colors -p --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_project/, src/ tests/ extension/",
        "stan": "phpstan analyze -l 8 src/",
        "linters": [
            "@cs-fix",
            "@cs-check",
            "@stan"
        ],
        "test": "codecept build && codecept run unit",
        "test-qa": "codecept build && codecept run acceptance",
        "test-cover": "codecept build && codecept run unit --coverage-xml",
        "test-cover-html": "codecept build && codecept run unit --coverage-html",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^5.0 || ^6.0"
        }
    }
}

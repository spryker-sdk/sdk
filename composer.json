{
    "name": "spryker-sdk/spryker-sdk",
    "description": "The Spryker SDK aims to provide a single entry point to accelerate your productivity working with Spryker.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^2.4",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/migrations": "^3.3",
        "doctrine/orm": "^2.10",
        "monolog/monolog": "^2.3",
        "ondrejmirtes/better-reflection": "^4.3.81",
        "phpstan/phpstan": "^1.2",
        "spryker/architecture-sniffer": "^0.5.2",
        "spryker/code-sniffer": "^0.17.1",
        "symfony/console": "5.3.*",
        "symfony/dotenv": "5.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.3.*",
        "symfony/process": "5.3.*",
        "symfony/runtime": "5.3.*",
        "symfony/validator": "5.3.*",
        "symfony/yaml": "5.3.*"
    },
    "require-dev": {
        "codeception/codeception": "*",
        "codeception/module-asserts": "*",
        "mikey179/vfsstream": "^1.6",
        "phpunit/php-code-coverage": "^9.2",
        "sllh/composer-versions-check": "^2.0",
        "symfony/filesystem": "^5.3",
        "symfony/var-dumper": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "SprykerSdk\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerSdk\\Sdk\\Tests\\": "tests/Sdk/Tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "cs-check": "phpcs --colors -p -s --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_data/,/_support/ src/ tests/",
        "cs-fix": "phpcbf --colors -p --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_data/,/_support/ src/ tests/",
        "stan": "phpstan analyze -l 8 src/",
        "test": "codecept build && codecept run",
        "test-cover": "codecept build && codecept run --coverage-xml",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    }
}
